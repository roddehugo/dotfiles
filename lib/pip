#!/usr/bin/env bash

run_pip() {
  if type_exists 'pip'; then
    e_header "Installing pip modules"

    # List of pip packages
    local -a packages=(
      'pip'
      'setuptools'
      'virtualenv'
      'ipython'
      'pynvim'
    )

    # Install packages globally and quietly
    gpip install --upgrade $( printf "%s " "${packages[@]}" )
    [[ $? ]] && e_success "Done"
  else
    e_warn "pip not found. Skipping."
    exit 0
  fi
}
